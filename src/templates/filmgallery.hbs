{{#each this}}
<li class="poster">
  <div class="poster__img-wrap">
    <img src="{{poster_path}}" data-compare="{{poster_path}}" alt="movie-poster" class="poster__img" width="274">
  </div>
  <div class="poster__content-wrap">
    <h3 class="poster__movie-name">{{original_title}}</h3>
    <div class="poster__movie-info-wrap">
      <ul class="poster__genre-list list">
        {{#if genre_ids}}
          {{#each genre_ids}}
          <li class="poster__genre-item">
            {{this}}<span>,&nbsp;</span></li>
          {{/each}}
          {{else}}
          <li class="poster__genre-item">
            --<span>,&nbsp;</span></li>
        {{/if}}
        <p class="poster__genre-item">&nbsp| {{release_date}}</p>
      </ul>
    </div>
  </div>
</li>
{{/each}}